{
    "name": "application-tracker",
    "version": "1.0.0",
    "description": "",
    "scripts": {
      "serve": "NODE_ENV=production node ./server/dist/server.js",
      "install": "cd ./client && npm ci && cd ../server && npm ci",
      "build": "npm run build-frontend && npm run build-server && npm run copy-frontend",
      "build-frontend": "NODE_ENV=production cd ./client && npm run build",
      "build-server": "NODE_ENV=production cd ./server && npm run build",
      "copy-frontend": "mkdir -p ./server/dist/build && cp -R ./client/build/. ./server/dist/build",
      "init-database": "NODE_ENV=production cd ./server && tsc && node dist/tools/initProdDatabase.js"
    },
